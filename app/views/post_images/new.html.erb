<h1>画像投稿</h1>
<% if @post_image.errors.any? %>
<%= @post_image.errors.count %>件のエラー
<% @post_image.errors.full_messages.each do |message| %>
<li>
<%= message %>
</li>
<% end %>

<% end %>


<%= form_with model: @post_image do |f| %>
<h4>タイトル</4><br>
<%= f.text_field :shop_name %>

<h4>説明</h4>
<%= f.text_area :caption %>

<h4>画像</h4>
<%= f.file_field :image,accept: 'image/*' %>
<%= f.submit "投稿" %>

<% end %>