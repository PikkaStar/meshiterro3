<h1>一覧</h1>
<% @post_images.each do |post_image| %>


<%= link_to post_image_path(post_image.id) do %>
<p><%= image_tag post_image.get_image %></p>
<% end %>

<p>ユーザー画像<%= image_tag post_image.user.get_profile_image(100,100) %></p>

<p><%= post_image.shop_name %></p>

<p><%= post_image.caption %></p>

<p>ユーザーネーム<%= post_image.user.name %></p>

<% end %>